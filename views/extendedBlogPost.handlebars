{{> privateNavbar}}

<div class="d-flex flex-wrap justify-content-evenly p-4">
<div class="card w-50">
  <div class="card-header">
    Posted by {{formattedBlogPost.user.username}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{formattedBlogPost.title}}</h5>
    <p class="card-text">{{formattedBlogPost.description}}</p>
    <small>Created {{formatDate formattedBlogPost.createdAt}}</small>
    <div class="comments pt-4">
      <h6>Comments:</h6>
      {{#each formattedComments as |comment|}}
      {{> comments}}
      {{/each}}
    </div>
  </div>
</div>
</div>
<div class="d-flex flex-wrap justify-content-evenly p-3 text-center">
  <form class="mb-3 w-50 newComment" id="{{formattedBlogPost.id}}">
    <label for="exampleFormControlTextarea1" class="form-label">Enter a comment:</label>
    <textarea class="form-control" id="commentText" rows="3"></textarea>
    <div class="col-auto mt-4">
      <button type="submit" class="btn btn-primary mb-3 w-25">Post</button>
    </div>
  </form>
</div>

<div class="toast position-absolute top-75 start-50 translate-middle" role="alert" aria-live="assertive" aria-atomic="true" id="addCommentToast">
  <div class="toast-header">
    <strong class="me-auto">Failed to add comment!</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    Please check the inputted content.
  </div>
</div>